<?xml version="1.0"?>
<odoo>

<template id="account.report_invoice_document">
    <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
           
             <div name="reference"/>

            <t> 
                <t t-set="o" t-value="o.with_context({'lang': lang})"/>
                
                <div class="page"><center>
                    <h2 class="text-center">
                        <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">Invoice No.</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.type == 'out_refund'">Credit Note</span>
                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                        <span t-field="o.number"/>
                    </h2>
                  </center>
                  <t t-set="address">
                    <address t-field="o.partner_id" 
                    t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    
                </t>
                    
                        <div>
                        <span class="pull-left" t-if="o.partner_id" name="partner">
                            <strong>To:</strong>
                            <span  t-field="o.partner_id.name"/>
                        </span>
                   
                       
                      <span name="reference" class="pull-right" t-if="o.reference">
                            <strong>Payment #:</strong>
                            <span t-field="o.reference"/>
                        </span>
                       <br/>
                        <span class="pull-left" t-if="o.partner_id.child_ids[0]" name="contact">
                            <strong>Contact:</strong>
                            <span t-field="o.partner_id.child_ids[0].title"/> <span t-field="o.partner_id.child_ids[0].name"/>
                        </span>
                         
                        <span class="pull-right" t-if="o.name" name="name">
                            <strong>Job No.:</strong>
                            <span t-field="o.name"/>
                        </span>
                        <br/>
                       <span class="pull-left" t-if="o.date_invoice" name="invoice_date">
                           <strong>Date:</strong>
                            <span  t-field="o.date_invoice"/>
                        </span>
                        </div>
                        

                   

                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <t t-set="colspan" t-value="6"/>
                                <th class="text-left"><span>Description</span></th>
                                <th class="text-left"><span>Unit</span></th>
                                <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <th class="text-right">
                                    <span>Amount</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="imw_total" t-value="0"/>
                            
                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <t t-set="imw_unit_price" t-value="line.price_unit * line.imw_qty" />
                                <t t-set="imw_current_subtotal" t-value="imw_unit_price * line.imw_measurement"/>
                                <t t-set="imw_total" t-value="imw_total + imw_current_subtotal"/>
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                      <td class="text-left">
                                            <t t-esc="o.amount_to_word(line.quantity)"/>
                                            (<span t-field="line.quantity"/>) <span t-field="line.name"/>
                                              (<span t-field="line.quantity"/> X <span t-field="line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>)
                                        </td>
                                        <td name="account_invoice_line_name"> <span t-field="line.imw_measurement"/> <span t-field="line.otherUnitMeasure"/></td>
                                        
                                        <td><span t-esc="imw_unit_price"/></td>
                                        <td class="text-right o_price_total">
                                            <span t-esc="imw_current_subtotal"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td t-att-colspan="colspan">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td t-att-colspan="colspan">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-esc="imw_total"/><br/>
                                            <span t-esc="o.currency_id.amount_to_text(imw_total)"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <t t-if="o.currency_id.name=='EGP'">
                      <div class="row"><h6>
                        Bank Details<br/>
Bank Name: Arab Investment Bank, Alexandria Branch.<br/>
Swift Code: AINBEGCAAALX<br/> 
Bank Address: 48 Al Horeya St., Alexandria<br/>
P.O. Box: 591 Alexandria<br/>
Tel: (203) 4863505 - (203) 4807451<br/>
FAX: (203) 4871872<br/>
ACC Name: International Marine Works<br/>
ACC No.: 101257<br/>
</h6>
                      </div>
                    </t>
                    <t t-if="o.currency_id.name!='EGP'">
                      <div class="row" >
                        <h6>
                          Bank Details<br/>
Bank Name: Bank of Arab Investment Bank, H.O Cairo.<br/>
Swift Code: CHASUS33 <br/>
J.P Morgan Chase N.Y<br/>
Swift Code: CHASUS33<br/>
Acc No.: 544-7-12778<br/>
F/O Arab Investment Bank Alexandria Branch<br/>
Bank Address: 68 Al Horeya St., Alexandria<br/>
P.O. Box: 591 Alexandria<br/>
Swift Code: AINBEGCAAALX<br/>
ACC Name: International Marine Works<br/>
ACC No.: 101257 with them<br/>
Address: 89 Khaled Ibn ElWaleed<br/>
ALEXANDRIA EGYPT<br/>

                        </h6>
                      </div>
                    </t>
                <div>
                <span class="pull-left">QP</span><span class="pull-right">Form 17-QP 07</span>
                </div>
                </div>
            </t>
             </div>
        </template>

</odoo>

